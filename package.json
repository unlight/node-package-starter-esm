{
  "name": "node-package-starter",
  "version": "0.0.0-dev",
  "license": "MIT",
  "description": "",
  "author": "2020",
  "keywords": [],
  "type": "module",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test": "npm run eslint && npm run tscheck && npm run test:cov",
    "test:r": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:w": "vitest watch",
    "lint": "npm run eslint && npm run tscheck",
    "eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "eslint:w": "chokidar \"**/*.ts\" -i node_modules --silent --initial -c \"npm run eslint\"",
    "eslint:fix": "npm run eslint -- --fix",
    "tscheck": "tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch",
    "lint:fix": "npm run eslint:fix && npm run lint:doc:fix",
    "lint:doc": "sh Taskfile remark_run",
    "lint:doc:fix": "sh Taskfile remark_run --output",
    "format:src": "prettier src --write",
    "commit_lint": "sh Taskfile commit_lint",
    "build": "sh Taskfile buildMicrobundle5",
    "lint:w": "run-p tscheck:w eslint:w",
    "test:m": "node node_modules/@stryker-mutator/core/bin/stryker.js run"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "3.0.9",
    "c8": "^10.1.3",
    "chokidar-cli": "^3.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-wix-editor": "^3.3.0",
    "git-branch-is": "^4.0.0",
    "globals": "^16.0.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.2.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "remark-license": "^6.1.0",
    "remark-toc": "^9.0.0",
    "semantic-release": "^24.2.3",
    "simplytyped": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.0.9"
  }
}
